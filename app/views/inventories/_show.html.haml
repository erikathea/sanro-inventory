%b Item:
  = @inventory.item
%p
  %b Unit price:
  = @inventory.unit_price
%p
  %b Current stock:
  = @inventory.current_stock
.nested-fields.col-xs-12.receipt-detail
  .field.form-group.col-xs-3
    = f.label :id
    f.object.id
  .field.form-group.col-xs-2.unit_price
    = f.label 'Unit Price'
      = f.number_field :unit_price, min: 1,class: 'form-control', step: 0.01

  .field.form-group.col-xs-2
    = label_tag 'Part'
    = f.text_field :part_number, class: 'form-control item_part_field', placeholder: 'PART', disabled: @disabled
  .field.form-group.col-xs-1.qty
    = f.label :qty
    = f.number_field :qty, min: 1, class: 'form-control', step: 0.01, disabled: @disabled ? true : f.object.qty.blank? ? false:true
  .field.form-group.col-xs-1
    = f.label :unit
    = f.text_field :unit, value: f.object.unit.blank? ? 'PC':f.object.unit, class: 'form-control', disabled: @disabled

  .field.form-group.col-xs-2.total
    = f.label :total
    = f.number_field :total, class: 'form-control', step: 0.01, disabled: @disabled, readonly: true
  = f.hidden_field :item
  = f.hidden_field :type
  .col-xs-1
    = link_to_remove_association " ", f, class: 'glyphicon glyphicon-remove-sign btn btn-link btn-xs'
