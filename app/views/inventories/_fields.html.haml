.nested-fields.invetory_fields.form-inline
  = f.hidden_field :item_id

  .field.form-group
    = f.label :unit_price
    = f.number_field :unit_price, class: 'form-control', min: 1, step: 0.01
  .field.form-group
    = f.label :current_stock
    = f.number_field :current_stock, class: 'form-control',  step: 0.01
  .field.form-group
    %b.text-info
      Inventory ID:
      = f.object.try(:id)
  .field.form-group
    = link_to_remove_association " ", f, class: 'glyphicon glyphicon-remove-sign btn btn-link btn-xs'