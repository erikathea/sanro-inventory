%table.table.table-hover.table-responsive.inventory
  %thead
    %tr
      %th Inventory ID
      %th Receipt No.
      %th Description - Part No
      %th Unit Price
      %th Selling Price
      %th Current Stock

  %tbody
    - inventories.each do |inventory|
      %tr
        %td= inventory.id
        %td
          - if inventory.incoming_receipt.present?
            = link_to inventory.incoming_receipt.receipt_number, incoming_receipt_path(inventory.incoming_receipt)
          - if inventory.outgoing_receipt.present?
            = link_to inventory.outgoing_receipt.receipt_number, outgoing_receipt_path(inventory.outgoing_receipt)
        %td #{inventory.item.description} - #{inventory.item.part_number}
        %td= inventory.unit_price
        %td
          - if inventory.incoming_receipt.present?
            = inventory.item.selling_price
          - if inventory.outgoing_receipt.present?
            = inventory.outgoing_receipt.id
        %td= inventory.current_stock
