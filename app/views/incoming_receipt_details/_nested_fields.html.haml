.nested-fields.col-xs-12.receipt-detail
  %table.table.table-hover.table-responsive.receipt-details
    %tbody
      %tr
        %td
          .field.form-group.description
            = f.label :description
            = f.text_field :description, class: 'form-control', placeholder: 'DESCRIPTION'
        %td
          .field.form-group.part-number
            = f.label :part_number
            = f.text_field :part_number, class: 'form-control', placeholder: 'PART NO'
        %td.width-10
          .field.form-group.qty
            = f.label :qty
            = f.number_field :qty, min: 1, class: 'form-control', step: 0.01
        %td.width-10
          .field.form-group
            = f.label :unit
            = f.text_field :unit, value: f.object.unit.blank? ? 'PC':f.object.unit, class: 'form-control'
        %td.width-15
          .field.form-group.unit-price.price
            = f.label :unit_price
            = f.number_field :unit_price, class: 'form-control', step: 0.01
        %td
          .field.form-group.total
            = f.label :total
            = f.number_field :total, class: 'form-control', step: 0.01
        %td
          .field.form-group
            = f.hidden_field :id
            = link_to_remove_association " ", f, class: 'glyphicon glyphicon-remove-sign btn btn-link btn-xs'
