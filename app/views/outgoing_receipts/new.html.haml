%h3
  Add #{@outgoing_receipt.type_title}
  %small
    - if @outgoing_receipt.sale_type == 0
      = link_to 'Cancel', sales_invoices_outgoing_receipts_path, class: 'glyphicon glyphicon-arrow-left btn btn-link btn-xs'
    - elsif @outgoing_receipt.sale_type == 1
      = link_to 'Cancel', deliveries_outgoing_receipts_path, class: 'glyphicon glyphicon-arrow-left btn btn-link btn-xs'
    - else
      = link_to 'Cancel', outgoing_receipts_path, class: 'glyphicon glyphicon-arrow-left btn btn-link btn-xs'

.row-fluid{data: {no_turbolink: true}}
  = render 'form'
