%h3
  = @type

%table.table.table-hover.table-responsive.receipt#outgoing-receipts
  %thead
    %tr
      %th Receipt number
      %th Client
      %th Address
      %th Date issued
      %th Total
      %th Amount received
      %th Balance
      - if !@type
        %th Type

  %tbody
    - @outgoing_receipts.each do |outgoing_receipt|
      %tr
        %td= link_to outgoing_receipt.receipt_number, outgoing_receipt
        %td= outgoing_receipt.client
        %td= outgoing_receipt.address
        %td= outgoing_receipt.date_issued
        %td
          .pull-right.text-success
            %b= number_with_precision(outgoing_receipt.total, precision:2)
        %td
          .pull-right
            = number_with_precision(outgoing_receipt.amount_received, precision:2)
        %td
          .pull-right.text-danger
            %b= number_with_precision(outgoing_receipt.balance, precision:2)
        - if !@type
          %td= outgoing_receipt.type_title
