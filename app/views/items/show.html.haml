%h3
  #{@item.full_description}
  %small
    = link_to 'Edit', edit_item_path(@item), class: 'glyphicon glyphicon-pencil btn btn-link btn-xs'
  %small
    = link_to 'Destroy', @item, :method => :delete, :data => { :confirm => 'Are you sure?' }, class: 'glyphicon glyphicon-trash btn btn-link btn-xs'
  %small
    = link_to 'Back to Inventory Items', items_path, class: 'glyphicon glyphicon-arrow-left btn btn-link btn-xs'

%p#notice= notice

.pull-right
  %h4
    Total Stock:
    = number_with_precision(@item.total_stock, precision:2)

  %p
    %b SRP:
    = number_with_precision(@item.selling_price, precision:2)

%p
  %b Name:
  = @item.description
%p
  %b Part number:
  = @item.part_number
%p
  %b Remarks:
  = @item.remarks
%br
= render 'inventories/list', inventories: @item.inventories
